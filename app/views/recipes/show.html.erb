<div class='recipe-background' >
<p id="notice"><%= notice %></p>

<h2><%= @recipe.name %></h2>
<div class='meta'>by <%= @recipe.user.username %> </div>
<p>
  <b>Description:</b>
  <%= @recipe.description.html_safe %>
</p>

  <b>Ingredients:</b>
<ul>
  <% @recipe.ingredients.each do |i| %>
  <li><%= i.name.capitalize %> <%= RecipeIngredient.where(recipe_id: @recipe.id, ingredient_id: i.id).first.amount %></li>
  <% end %>
</ul>

<p>
  <b>Instructions:</b>
  <%= @recipe.instructions.html_safe %>
</p>

<p>
  <b>Category:</b>
  <%= @recipe.category.try(:name) %>
</p>

<p>
<b>Tags:</b>
  <%= @recipe.tag_list.join(', ') %>
</p>

<% if can? :update, @recipe %>
  <%= link_to 'Edit', edit_recipe_path(@recipe) %>
<% end %>
<%= link_to 'Back', recipes_path %>
</div>