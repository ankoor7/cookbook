<%= nested_form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "span6" %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :class => "span6", rows: 4 %>
  </div>
  <div class="field">
  <%= f.label :recipe_image %><br />
  <%= f.file_field :recipe_image %>
  </div>


  <%= render 'fields', f: f %>


  <div class="field">
    <%= f.label :instructions %><br />
    <%= f.text_area :instructions, :class => "span6", rows: 20 %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
     <%= f.select(  :category_id, Category.all.collect {|category| [ category.name, category.id ] }, { include_blank: true }) %>
  </div>
  <div class="field">
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list, :class => "span6" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
