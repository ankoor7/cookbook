<h1>Recipes</h1>


<% @recipes.each do |recipe| %>
    <h2><a href='<%= recipe_path(recipe)%>'><%= recipe.name %></a></h2>
    <p><%= recipe.description %></p>
    <div class='recipe-meta'>
        <p>Tags: <%= recipe.category.try(:name) %> <%= recipe.tag_list %><br />

        <%= link_to 'Edit', edit_recipe_path(recipe) %>
        <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
<% end %>

<br />

<%= link_to 'New Recipe', new_recipe_path %>
