<!DOCTYPE html>
<html>
<head>
  <title>Cookbook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body style="background-image:url('<%= asset_path @background %>');background-size:cover;background-repeat:no-repeat;">
  <div id='page' >
    <div id='header'>
      <div class="navbar">
        <div class="navbar-inner">
          <a class="brand" href=<%=recipes_path%>>Cookbook</a>
          <ul class="nav">
<!--             <li><a href=<%=recipes_path%>>Recipes</a></li>
 -->          </ul>
            <form class="navbar-search pull-right" method='post' action=<%=search_tags_path%>>
              <input type="text" class="search-query input-small" placeholder="Search Tags" name='tags_search' >
            </form>
        </div>
      </div>
    </div>  <!-- end .header -->

    <%= yield %>

  </div> <!-- end .page -->
</body>
</html>
